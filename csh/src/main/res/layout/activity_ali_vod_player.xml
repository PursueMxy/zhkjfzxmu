<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ALiVodPlayerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.view.SurfaceView
        android:layout_centerHorizontal="true"
        android:id="@+id/video_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
    />
    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/Play_danmakuview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/alivod_img_barrage"
            android:src="@mipmap/edt_danmu"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dp_30"
        android:drawableLeft="@mipmap/zhibozhong"
        android:drawablePadding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#ffffff"
        android:text="直播中"
        android:textSize="@dimen/sp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_220"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/advicer_img"
                android:src="@drawable/icon_reds"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/alivo_tv_name1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:lines="2"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/dp_50"
                android:layout_above="@+id/alivo_tv_price1"
                android:id="@+id/alivo_tv_money1"
                android:text="¥ "
                android:enabled="true"
                android:textSize="@dimen/sp_15"
                android:textColor="#FFFFFF"
                android:background="@drawable/icon_tv_bg"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/alivo_tv_price1"
                android:text="¥ "
                android:enabled="true"
                android:textSize="@dimen/sp_17"
                android:textColor="#FFFFFF"
                android:background="@drawable/icon_tv_bg"
                android:layout_alignRight="@+id/advicer_img"
                android:layout_alignBottom="@+id/advicer_img"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="@dimen/dp_25" />
        </RelativeLayout>
            <ImageView
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/alivo_img_top1"
                android:src="@mipmap/csh_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/advicer_img1"
                android:src="@drawable/icon_reds"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/alivo_tv_name2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:lines="2"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/dp_50"
                android:layout_above="@+id/alivo_tv_price2"
                android:id="@+id/alivo_tv_money2"
                android:text="¥ "
                android:enabled="true"
                android:textSize="@dimen/sp_15"
                android:textColor="#FFFFFF"
                android:background="@drawable/icon_tv_bg"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/alivo_tv_price2"
                android:text="¥ "
                android:enabled="true"
                android:textSize="@dimen/sp_17"
                android:textColor="#FFFFFF"
                android:background="@drawable/icon_tv_bg"
                android:layout_alignRight="@+id/advicer_img1"
                android:layout_alignBottom="@+id/advicer_img1"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="@dimen/dp_25" />
        </RelativeLayout>
            <ImageView
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/alivo_img_top2"
                android:src="@mipmap/csh_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/alivo_img__qrcode"
                android:src="@drawable/icon_qrcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120" />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignLeft="@+id/video_view"
        android:layout_width="@dimen/dp_220"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/alivo_img_left"
            android:scaleType="fitXY"
            android:src="@mipmap/csh_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</FrameLayout>