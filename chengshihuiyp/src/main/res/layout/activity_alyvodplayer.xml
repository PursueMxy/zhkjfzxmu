<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ALYVodplayerActivity">

    <android.view.SurfaceView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_marginLeft="@dimen/dp_30"
        android:drawableLeft="@mipmap/zhibozhong"
        android:drawablePadding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#ffffff"
        android:text="直播中"
        android:textSize="@dimen/sp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/alyvod_img_advertising_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/saoma" />
       <RelativeLayout
           android:layout_above="@+id/alyvod_img_goods"
           android:background="#00ffffff"
           android:layout_width="@dimen/dp_200"
           android:layout_height="@dimen/dp_200">
       <android.support.v7.widget.RecyclerView
        android:id="@+id/alyvod_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
       </RelativeLayout>

        <ImageView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility="visible"
            android:id="@+id/alyvod_img_goods"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentBottom="true"
          />

</RelativeLayout>