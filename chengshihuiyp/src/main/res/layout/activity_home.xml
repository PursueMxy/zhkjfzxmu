<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <com.yyydjk.library.BannerLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlayDuration="8000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:scrollDuration="1100"
        app:selectedIndicatorColor="#00000000"
        app:selectedIndicatorHeight="0dp"
        app:selectedIndicatorWidth="0dp"
        app:unSelectedIndicatorColor="#00ffffff"
        app:unSelectedIndicatorHeight="0dp"
        app:unSelectedIndicatorWidth="0dp" />
</RelativeLayout>