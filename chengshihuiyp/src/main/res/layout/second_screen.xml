<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.yyydjk.library.BannerLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlayDuration="8000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:scrollDuration="1100"
        app:selectedIndicatorColor="#00000000"
        app:selectedIndicatorHeight="0dp"
        app:selectedIndicatorWidth="0dp"
        app:unSelectedIndicatorColor="#00ffffff"
        app:unSelectedIndicatorHeight="0dp"
        app:unSelectedIndicatorWidth="0dp" />

    <ImageView
        android:visibility="gone"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:id="@+id/second_screen_img_qrcode"
        android:src="#00ff0000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
