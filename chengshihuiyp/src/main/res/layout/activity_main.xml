<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <com.fzzhkj.spgg.CustomVideoView
                android:layout_weight="1"
                android:id="@+id/videoPlayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:src="@drawable/zmy_bg"
        android:layout_weight="1"
        android:id="@+id/main_img_advert"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/main_rl_binding"
        android:layout_marginTop="@dimen/dp_280"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/main_edt_xxh"
            android:hint="请输入序号号"
            android:gravity="center|left"
            android:textColorHint="#ff7a0b"
            android:textSize="@dimen/sp_20"
            android:textColor="#ff7a0b"
            android:padding="@dimen/dp_5"
            android:inputType="number"
            android:layout_marginLeft="@dimen/dp_120"
            android:background="@drawable/main_edt_bg"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_edt_xxh"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:background="@drawable/main_edt_bg"
            android:id="@+id/main_tv_binding"
            android:text="绑定"
            android:textSize="@dimen/sp_20"
            android:textColor="#ff7a0b"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/chengyichuanmei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/min_img_advertising_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/saoma" />
    </RelativeLayout>
</FrameLayout>