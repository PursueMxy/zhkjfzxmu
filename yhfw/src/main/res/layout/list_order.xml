<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/orderList_driverName"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_19"
            android:enabled="true"
            android:text="酒后代驾"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/orderList_order_status"
              android:layout_alignBottom="@+id/orderList_driverName"
              android:layout_marginRight="@dimen/dp_15"
              android:textSize="@dimen/sp_15"
              android:text="已完成"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:drawableLeft="@mipmap/alarm"
        android:drawablePadding="@dimen/dp_10"
        android:id="@+id/orderList_orderNo"
        android:layout_marginTop="@dimen/dp_5"
        android:text="订单编号："
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@mipmap/spot"
        android:id="@+id/orderList_startDt"
        android:layout_marginTop="@dimen/dp_5"
        android:text="出发地："
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@mipmap/spot_red"
        android:id="@+id/orderList_stopDt"
        android:layout_marginTop="@dimen/dp_5"
        android:text="目的地："
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"/>

</LinearLayout>
