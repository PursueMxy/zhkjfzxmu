<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/list_order_taking_tv_drivingType"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_black"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="代驾类型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_order_taking_tv_startaddress"
        android:layout_marginLeft="@dimen/dp_20"
        android:drawableLeft="@mipmap/spot"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_blackCC"
        android:text="出发地"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_order_taking_tv_stopaddress"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_20"
        android:drawableLeft="@mipmap/spot_red"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_blackCC"
        android:text="目的地"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_order_taking_tv_estimated_mileage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_black"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="预计行程"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

     <Button
         android:id="@+id/list_order_taking_btn_grab_sheet"
         android:background="@drawable/btn_ordertaking"
         android:textColor="@color/color_white"
         android:text="抢 单"
         android:textStyle="bold"
         android:layout_marginLeft="@dimen/dp_40"
         android:layout_marginRight="@dimen/dp_40"
         android:layout_marginBottom="@dimen/dp_10"
         android:layout_marginTop="@dimen/dp_15"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_30" />
</LinearLayout>
