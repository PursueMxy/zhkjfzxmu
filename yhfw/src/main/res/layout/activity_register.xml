<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:src="@mipmap/icon_back"
            android:id="@+id/tv_orderList_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />
    </RelativeLayout>
    <com.zhkj.yhfw.customview.CircleImageView
        android:id="@+id/register_img_head"
        android:src="@mipmap/icon_road"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />

    <TextView
        android:textColor="@color/ff858585"
        android:textSize="@dimen/sp_12"
        android:text="点击上传头像"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@color/ff858585"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
             android:hint="请输入你的姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@color/ff858585"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入你的手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@color/ff858585"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入验证码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@color/ff858585"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@color/ff858585"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15" />
    <EditText
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入你的姓名"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@color/ff858585"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:hint="选择驾照申领时间"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_next"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
    </LinearLayout>
    <View
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@color/ff858585"
    android:layout_width="match_parent"
    android:layout_height="0.3dp"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:layout_centerVertical="true"
            android:text="身份证正面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/Register_add_card_due"
            android:src="@mipmap/icon_add_img"
            android:layout_marginLeft="@dimen/dp_122"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:layout_centerVertical="true"
            android:text="身份证反面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/Register_add_card_reaction"
            android:src="@mipmap/icon_add_img"
            android:layout_marginLeft="@dimen/dp_122"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:layout_centerVertical="true"
            android:text="驾驶证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/Register_add_card_driver"
            android:src="@mipmap/icon_add_img"
            android:layout_marginLeft="@dimen/dp_122"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52" />
    </RelativeLayout>
    <CheckBox
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:text="阅读并同意用户协议"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="@dimen/dp_10"
        android:text="注册"
        android:textColor="@color/color_white"
        android:layout_gravity="center"
        android:background="@drawable/btn_ordertaking"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_32" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>