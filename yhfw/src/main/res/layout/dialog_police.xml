<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:text="一键报警"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/ff858585"
        android:layout_width="match_parent"
        android:layout_height="0.15dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <TextView
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:text="是否发送短信给紧急联系人\n或直接拨打110"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_police_tv_sms"
            android:background="@drawable/btn_bottom_858585"
            android:text="发送短信"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/dialog_police_tv_call"
            android:background="@drawable/btn_bottom_fa6265"
            android:text="拨打110"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
