<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@mipmap/unorder"
        android:text="未接单"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_white"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_39" />

    <ImageView
        android:src="@mipmap/spot"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lv_tv_start_address"
        android:textSize="@dimen/sp_11"
        android:text="厦门市国贸大厦"
        android:layout_marginLeft="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/spot_red"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lv_tv_stop_address"
        android:textSize="@dimen/sp_11"
        android:text="厦门市湖里区万达广场"
        android:layout_marginLeft="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/sp_11"
        android:text="预计行程： 10.5KM"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/sp_11"
        android:text="订单时间： 19:00"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"/>

    <Button
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:id="@+id/button"
        android:textColor="@color/color_white"
        android:background="@drawable/btn_sala"
        android:layout_marginTop="@dimen/dp_51"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_36"
        android:text="抢  单" />
</RelativeLayout>
