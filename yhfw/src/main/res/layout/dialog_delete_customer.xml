<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:text="确认删除？"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dialog_customer_tv_name"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:text="姓名："
        android:textColor="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dialog_customer_tv_mobile"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:text="电话："
        android:textColor="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:id="@+id/dialog_customer_tv_back"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/v666666"
            android:layout_width="0.1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/dialog_customer_tv_confirm"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="确认"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
