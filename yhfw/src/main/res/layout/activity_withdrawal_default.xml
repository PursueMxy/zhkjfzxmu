<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.WithdrawalDefaultActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/WithdrawalDefault_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="申请佣金提现"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:id="@+id/Withdrawal_tv_bankName"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_black"
            android:text="支付宝"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/Withdrawal_tv_cardID"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/WithdrawalDefaul_next"
            android:text="*****"
            android:textColor="@color/color_blackCC"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/WithdrawalDefaul_next"
            android:src="@mipmap/icon_next"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Withdrawal_tv_setmoney"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="可提现金额 ：0.00元"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/Withdrawal_edt_money"
            android:paddingLeft="@dimen/dp_13"
            android:drawableLeft="@mipmap/icon_renminbi"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="请输入提现金额"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Withdrawal_btn_ok"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/btn_ordertaking"
            android:textColor="@color/white"
            android:text="预计两小时内到账，确认提现"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:text="1、提现申请提交后，系统直接扣钱"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:text="2、需要等待后台审核，不可提现的金额系统将返原账号"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:text="3、若有疑问请联系客服：0592——57711628"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>