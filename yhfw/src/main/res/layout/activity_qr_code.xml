<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.QrCodeActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/QrCode_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="提现明细"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.zhkj.yhfw.customview.CircleImageView
        android:id="@+id/qrcode_img_head"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center"
        android:src="@mipmap/icon_round"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />

    <TextView
        android:id="@+id/qrcode_tv_nikenema"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/color_blackCC"
        android:textSize="@dimen/sp_14"
        android:text="测试账号"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/qrcode_img_qrcode"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:src="#000000"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120" />

    <TextView
        android:padding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_130"
        android:gravity="center"
        android:text="申请二维码"
        android:textSize="@dimen/sp_14"
        android:background="@color/color_ffd700"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>