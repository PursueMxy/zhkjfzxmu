<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.TeamActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/Team_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="我的绩效"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/btn_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160">
        <ImageView
            android:id="@+id/Team_img_head"
            android:src="@mipmap/icon_round"
            android:layout_margin="@dimen/dp_25"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />

        <TextView
            android:id="@+id/Team_tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/Team_img_head"
            android:layout_alignTop="@+id/Team_img_head"
            android:text="姓名"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Team_tv_fname"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toRightOf="@+id/Team_img_head"
            android:layout_alignBottom="@+id/Team_img_head"
            android:text="推荐人"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@+id/Team_img_head"
            android:background="@color/ff858585"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/Team_tv_money"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/Team_img_head"
            android:text="可提现佣金：0.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Team_tv_withdraw"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/btn_ordertaking"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/Team_img_head"
            android:textColor="@color/color_white"
            android:text="提现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/btn_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250">

        <TextView
            android:id="@+id/Team_tv_my_team"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@mipmap/icon_team"
            android:gravity="center"
            android:layout_toLeftOf="@+id/view_horizontal"
            android:layout_above="@+id/view_vertical"
            android:text="我的团队"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Team_tv_withdrawlog"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@mipmap/icon_yjtx"
            android:gravity="center"
            android:layout_toRightOf="@+id/view_horizontal"
            android:layout_above="@+id/view_vertical"
            android:text="提现明细"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Team_tv_qrcode"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@mipmap/icon_qcode"
            android:gravity="center"
            android:layout_toLeftOf="@+id/view_horizontal"
            android:layout_below="@+id/view_vertical"
            android:text="推广二维码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Team_tv_connission"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableTop="@mipmap/icon_yjmx"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:layout_toRightOf="@+id/view_horizontal"
            android:layout_below="@+id/view_vertical"
            android:text="佣金明细"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_vertical"
            android:layout_centerVertical="true"
            android:background="@color/ff858585"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:id="@+id/view_horizontal"
            android:layout_centerHorizontal="true"
            android:background="@color/ff858585"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>