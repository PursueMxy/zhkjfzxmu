<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.ConnissionActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/commission_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="佣金明细"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:id="@+id/commission_img_last"
            android:layout_toLeftOf="@+id/commission_tv_date"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/commission_tv_date"
            android:text="2019年8月"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/commission_img_next"
            android:layout_toRightOf="@+id/commission_tv_date"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/commission_tv_total_income"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/color_blackCC"
        android:textSize="@dimen/sp_13"
        android:text="总收入"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@color/white"
        android:id="@+id/commission_tv_message"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:text="没有更多了"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhouyou.recyclerview.XRecyclerView
        android:scrollbars="none"
        android:background="@color/white"
        android:id="@+id/Commission_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.zhouyou.recyclerview.XRecyclerView>
</LinearLayout>