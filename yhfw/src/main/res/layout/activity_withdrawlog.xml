<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.WithdrawlogActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/Withdrawlog_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="提现明细"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:id="@+id/Withdrawlog_slt_one"
            android:textColor="@color/color_ffd700"
            android:text="全部"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/Withdrawlog_slt_two"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:text="待审核"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/Withdrawlog_slt_three"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:text="待打款"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/Withdrawlog_slt_four"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:text="已打款"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/Withdrawlog_slt_five"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:text="无效"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/Withdrawlog_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.zhouyou.recyclerview.XRecyclerView>
</LinearLayout>