<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paasAct.MyTeamActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/MyTeam_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="我的团队"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/my_team_tv_message"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:text="没有更多了"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <com.zhouyou.recyclerview.XRecyclerView
         android:id="@+id/my_team_recyclerView"
         android:scrollbars="none"
         android:layout_width="match_parent"
         android:layout_height="match_parent"></com.zhouyou.recyclerview.XRecyclerView>
</LinearLayout>