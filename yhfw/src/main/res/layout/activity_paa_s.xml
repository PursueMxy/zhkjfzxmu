<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_C0C0BF"
    android:orientation="vertical"
    tools:context=".PaaSActivity">
    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/paas_img_home"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="平台服务"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
  <RelativeLayout
      android:layout_marginTop="@dimen/dp_23"
      android:layout_marginLeft="@dimen/dp_25"
      android:layout_marginRight="@dimen/dp_25"
      android:background="@color/color_white"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/paas_tv_name"
          android:layout_marginTop="@dimen/dp_12"
          android:layout_marginLeft="@dimen/dp_25"
          android:textSize="@dimen/sp_14"
          android:text="肖振宇 测试账号"
          android:textStyle="bold"
          android:textColor="@color/color_black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/paas_tv_driving_age"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_alignBottom="@+id/paas_tv_name"
          android:layout_toRightOf="@+id/paas_tv_name"
          android:text="驾龄：19年"
          android:textColor="@color/color_blackCC"
          android:textSize="@dimen/sp_11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <com.zhkj.yhfw.customview.CircleImageView
          android:id="@+id/paas_img_head"
          android:layout_marginRight="@dimen/dp_23"
          android:layout_centerInParent="true"
          android:layout_alignParentRight="true"
          android:src="@mipmap/icon_road"
          android:layout_width="@dimen/dp_45"
          android:layout_height="@dimen/dp_45" />
        <TextView
            android:id="@+id/paas_tv_driving_num"
            android:layout_below="@+id/paas_tv_name"
            android:text="代驾 :70次"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_9"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_blackCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/paas_tv_mobile"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_below="@+id/paas_tv_driving_num"
            android:text="电话：18859187133"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_blackCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_11"/>
      <TextView
          android:id="@+id/paas_tv_onlinetime"
          android:layout_toRightOf="@+id/paas_tv_mobile"
          android:layout_marginTop="@dimen/dp_9"
          android:layout_below="@+id/paas_tv_driving_num"
          android:text="在线时长 : 2072分钟"
          android:layout_marginLeft="@dimen/dp_25"
          android:textSize="@dimen/sp_11"
          android:textColor="@color/color_blackCC"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/dp_11"/>
  </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_422">
        <GridView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/paas_grid_one"
            android:verticalSpacing="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_365"
            android:numColumns="3" ></GridView>

        <Button
            android:id="@+id/paas_btn_log_off"
            android:layout_alignParentBottom="true"
            android:background="@color/color_black"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" />
    </RelativeLayout>
</LinearLayout>