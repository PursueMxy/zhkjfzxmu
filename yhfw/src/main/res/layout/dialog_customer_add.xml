<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:text="新增紧急联系人"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="@dimen/dp_10"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_30"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/paas_icon_customer"
        android:id="@+id/dialog_customer_add_edt_name"
        android:textSize="@dimen/sp_13"
        android:inputType="number"
        android:gravity="center|left"
        android:hint="请输入紧急联系人姓名"
        android:text=""
        android:textColor="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <EditText
        android:inputType="number"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_30"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@mipmap/icon_mobile"
        android:id="@+id/dialog_customer_add_edt_mobile"
        android:textSize="@dimen/sp_13"
        android:gravity="center|left"
        android:hint="请输入紧急联系人电话"
        android:text=""
        android:textColor="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/v666666"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:id="@+id/dialog_customer_add_tv_back"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="取 消"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/v666666"
            android:layout_width="0.1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/dialog_customer_add_tv_confirm"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="确 认"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
